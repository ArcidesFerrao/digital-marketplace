generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  isPremium Boolean   @default(false)
  balance   Float     @default(0)
  products  Product[]
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  fileUrl     String
  sellerId    String
  seller      User     @relation(fields: [sellerId], references: [id])
  createdAt   DateTime @default(now())
}

model Transaction {
  id        String   @id @default(cuid())
  buyerId   String
  sellerId  String
  productId String
  amount    Float
  createdAt DateTime @default(now())
}
